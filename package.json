{
  "name": "scrumforone",
  "version": "1.0.0",
  "description": "Personal time mgmt with agile methodologies",
  "main": "dist",
  "scripts": {
    "lint": "tsc && eslint src/**/*.ts",
    "build": "npm run lint && babel src -d dist --extensions '.ts' --ignore src/**/*.spec.ts",
    "start": "npm run build && node dist",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "dev": "nodemon --exec babel-node src/index.ts --extensions '.ts'"
  },
  "repository": {
    "type": "git",
    "url": "github.com/itwalton/scrumforone"
  },
  "keywords": [
    "scrum",
    "oss"
  ],
  "precommit": "lint, test",
  "author": "Ian Walton",
  "license": "UNLICENSED",
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.7.8",
    "pre-commit": "^1.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/node": "^7.6.3",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@types/chai": "^4.2.4",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.29",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "chai": "^4.2.0",
    "eslint": "^6.6.0",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  }
}